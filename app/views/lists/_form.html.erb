<h1><%= @list.id ? 'Edit List info' : 'Create new List' %></h1>

<%= form_with(model: [@board, @list], local: true, class: "ui form") do |f| %>
  <div class = "field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true, placeholder: "To-Do list or something"  %>
  </div>
  <%= f.submit nil, class: "ui blue button" %>
  <% end %>