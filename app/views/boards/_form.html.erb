<h1><%= @board.id ? 'Edit Board' : 'Create Board' %></h1>

<%= form_with(model: @board, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, required: true, autofocus: true, placeholder: "Last Name" %>
  </div>

  <%= f.submit nil, class: "ui green button inverted" %>
<% end %>